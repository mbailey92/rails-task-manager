<div class= "container">

<div class="px-4 py-2 card">
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p> completed? <%= @task.completed %></p>
</div>

    <div class="display inline-block">

      <%= link_to "Delete",
        task_path(@task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "mx-1 btn btn-primary"
      %>

      <%= link_to "Edit",
        edit_task_path(@task),
        class: "mx-1 btn btn-primary" %>

      <%= link_to "Return",
        tasks_path(@tasks),
        class: "mx-1 btn btn-primary" %>
  </div>
</div>
