<div class="container">
  <h1>Task list</h1>

  <ul class=>
  <% @tasks.each do |task| %>

  <li><%= link_to task.title, task_path(task) %></li>
  <% if task.completed? %>
  <i class="fa-solid fa-square-check"></i>
  <% else %>
  <i class="fa-regular fa-square"></i>
  <% end %>

  <% end %>
  </ul>

  <%= link_to "Create task",
  new_path(@task), class: "btn btn-primary" %>

</div>
